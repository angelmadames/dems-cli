{
  "name": "dems-cli",
  "description": "DEMS (Development Environment Management System) CLI",
  "author": "gbh.tech",
  "main": "dist/cli.js",
  "module": "cli.ts",
  "type": "module",
  "private": true,
  "bin": {
    "dems": "./dist/cli.js"
  },
  "scripts": {
    "build": "bun build --target=bun ./cli.ts --outdir dist/",
    "compile": "bun build --compile ./cli.ts --outfile ./dems",
    "format": "biome format src/ test/ --write",
    "lint": "biome lint src/",
    "check": "biome check src/ --apply",
    "test": "bun test"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "commander": "^11.1.0"
  }
}
